{
    "builds": [
      { "src": "api/*.py", "use": "@vercel/python" },
      { "src": "app/package.json", "use": "@vercel/next" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/mcq.py" },
      { "src": "/(.*)", "dest": "app" }
    ],
    "functions": {
      "api/mcq.py": {
        "runtime": "python@3.9",
        "maxDuration": 30
      }
    }
  }